{
  "label": "default-linux-ubuntu-tpm20-cbnt",
  "condition": [
    "//host_info/os_name//*[text()='Ubuntu'] or //host_info/os_name//*[text()='OpenEmbedded'] or //host_info/os_name//*[text()='Debian GNU/Linux']",
    "//host_info/hardware_features/TPM/meta/tpm_version//*[text()='2.0']",
    "//host_info/hardware_features/CBNT/enabled//*[text()='true']"
  ],
  "flavor_parts": {
    "PLATFORM": {
      "meta": {
        "tpm_version": "2.0",
        "cbnt_enabled": true
      },
      "pcr_rules": [
        {
          "pcr": {
            "index": 0,
            "bank": ["SHA384", "SHA256", "SHA1"]
          },
          "pcr_matches": true
        },
        {
          "pcr": {
            "index": 7,
            "bank": ["SHA384", "SHA256", "SHA1"]
          },
          "pcr_matches": true
        }
      ]
    }
  }
}
